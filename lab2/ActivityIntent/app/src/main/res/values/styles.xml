<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary_900</item>
        <item name="colorPrimaryDark">@color/color_primary_900_dark</item>
        <item name="colorAccent">@color/color_secondary_400</item>
    </style>

    <style name="BaseTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/color_on_primary</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ScoreTextView" parent="BaseTextView">
        <item name="android:textSize">64sp</item>
    </style>

    <style name="InputTextView" parent="BaseTextView">
        <item name="android:fontWeight">700</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ConfirmButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/color_on_secondary</item>
        <item name="android:backgroundTint">@color/color_secondary_400</item>
    </style>
</resources>